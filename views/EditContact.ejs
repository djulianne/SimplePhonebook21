<head>
    <link href="/css/customStyle.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>

<div class="container custom-container">
    <div class="row">
        <div class="col-md-5 d-flex align-items-center justify-content-center">
            <img src="/images/phonebook.png" class="img-fluid" />
        </div>
        <div class="col-md-5 custom-form-1 mx-auto">
            <% if(editSubmitObj != '') { %>
                <div class="alert alert-success text-center" role="alert">
                    <%- editSubmitObj %>
                </div>
            <%}%>
            <% if(editErrorsObj != '') { %>
                <div class="alert alert-danger text-center" role="alert">
                    <%- editErrorsObj[0].message %>
                </div>
            <%}%>
            <div class="text-center">
                <h3>Edit Contact</h3>
            </div>
            <form action="/editContact" enctype="multipart/form-data" method="POST">
                <div class="text-center">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="hidden" name="id" value="<%= contacts._id%>">
                            <label for="profilePic" class="form-label font-weight-bold">Profile Picture</label>
                            <input type="file" name="profilePic" id="profilePic" accept="image/" value="<%- contacts.profilePic %>">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label for="name" class="form-label font-weight-bold">Name</label>
                            <input type="text" class="form-control" name="name" id="name" value="<%- contacts.name %>" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label for="contactNo" class="form-label font-weight-bold">Contact Number</label>
                            <input type="number" class="form-control" name="contactNo" id="contactNo" value="<%- contacts.contactNo %>" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12">
                            <button type="submit" class="btnSubmit">Update</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>