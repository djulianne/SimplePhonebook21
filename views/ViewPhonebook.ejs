<head>
    <link href="/css/customStyle.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>

<div class="container custom-container">
    <div class="row">
        <div class="col-md-5 d-flex align-items-center justify-content-center">
            <img src="/images/phonebook.png" class="img-fluid" />
        </div>
        <div class="col-md-5 custom-form-1 mx-auto">
            <div class="text-center">
                <h3> Simple Phonebook</h3>
            </div>
            <% if(typeof recordContacts !== 'undefined' && recordContacts.length > 0)  {%>
                <% recordContacts.forEach(function(contacts, phonebook){ %>
                    <hr />
                    <div class="text-center">
                        <div>
                            <img src="https://drive.google.com/uc?export=view&id=<%- contacts.profilePic %>" style="height: 50px; width: 50px;">
                            <p>
                                Name: <%-contacts.name%><br />
                                Contact Number: <%-contacts.contactNo%>
                            </p>
                        </div>
                        <div>
                            <a href="/editContactView/<%- contacts._id%>" class="btn" style="background-color: rgb(131, 209, 240); color: white;">Edit</a>
                            <a href="/deleteContact/<%- contacts._id%>" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                <%})%>
            <% } %>
        </div>
    </div>
</div>